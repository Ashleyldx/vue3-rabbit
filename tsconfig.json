{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["element-plus/global", "vite/client"],
    "baseUrl": ".",
    "paths": {  // 路径映射，相对于baseUrl
      "@": ["./src"],
      "@/*": ["./src/*"]
//      "#/*": ["types/*"]
    }
  },
  "include": [ "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/store/userInfo.js",
    "src/theme/theme.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}